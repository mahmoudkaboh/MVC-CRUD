@using MvcEmp.Models;
@model Employee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>
    <h2 class="h2 font-italic bg-light text-center  text-danger bg-success">Update Employee </h2>
    <div>
        <form class="form-group" method="post">
            @Html.HiddenFor(x => x.ID)

            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">NAME</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Name)


                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="Age">AGE</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Age)


                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="Department">DEPARTMENT</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Department)


                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="City">CITY</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.City)

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Deoartment">ADDRESS</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Address)

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">

                </div>
            </div>
            <input type="submit" value="UPDATE" class="btn btn-success ml-4" />

        </form>

    </div>
    <div>
        <a href="/Employee/index" class="btn-outline-danger  ml-4"> BACK</a>

    </div>
</body>
</html>
